<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.SYF"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="17"
              android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:label="@string/app_name"
                 android:theme="@style/syf_theme"
                 android:icon="@drawable/ic_launcher"
                 android:allowBackup="true">
        <activity android:name="Home"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="Main"
                  android:label="@string/app_name"
                  android:parentActivityName="Home">
        </activity>
        <activity android:name="Favoris"
                  android:label="@string/app_name"
                  android:parentActivityName="Home">
        </activity>
        <activity android:name="RechercheRecette"
                  android:label="@string/app_name"
                  android:parentActivityName="Main">
        </activity>
        <activity android:name="AffichageRecette"
                  android:label="@string/app_name"
                  android:parentActivityName="RechercheRecette">
        </activity>
    </application>
</manifest>
